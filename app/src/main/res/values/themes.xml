<resources>
    <!-- Base application theme. -->
    <style name="Theme.Discoteca" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_600</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/indigo_600</item>
        <!-- Customize your theme here. -->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="textAppearanceHeadline2">@style/TextAppearance.Discoteca.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Discoteca.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Discoteca.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Discoteca.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Discoteca.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Discoteca.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Discoteca.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Discoteca.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Discoteca.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Discoteca.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Discoteca.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Discoteca.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>
        <item name="emphasisStrokeColorAlpha">0.12</item>
        <item name="rippleColorAlpha">0.22</item>
        <item name="background_card_color">@color/color_card_background_light</item>
        <item name="background_scan_color">@color/indigo_600</item>
        <item name="background_scrim_color">@color/scrim_background</item>
        <item name="background_appbar_color">@color/indigo_600</item>

        <item name="materialButtonStyle">@style/Widget.Discoteca.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.Discoteca.Button.TextButton</item>
        <item name="textInputStyle">@style/Widget.Discoteca.TextInputLayout.OutlinedBox</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Discoteca.MaterialAlertDialog
        </item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Discoteca.BottomSheetDialog</item>
        <item name="searchViewStyle">@style/Widget.Discoteca.SearchView</item>
        <item name="popupMenuBackground">@drawable/custom_popup_background</item>

    </style>

    <!-- Style Material Toolbar -->
    <style name="Widget.Discoteca.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlayToolbar</item>
    </style>

    <!-- Text Input OutlinedBox -->
    <style name="Widget.Discoteca.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/TextInputEditText.OutlinedBox</item>
    </style>

    <style name="TextInputEditText.OutlinedBox" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Discoteca.Subtitle1.OutlineBox
        </item>
        <item name="textAppearanceCaption">@style/TextAppearance.Discoteca.Caption.OutlineBox</item>
    </style>

    <!-- Material Alert Dialog -->
    <style name="ThemeOverlay.Discoteca.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Discoteca</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MaterialAlertDialog.Discoteca.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/MaterialAlertDialog.Discoteca.Body.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Discoteca.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Discoteca.Button.Dialog</item>
    </style>

    <!-- BottomSheet Dialog -->
    <style name="ThemeOverlay.Discoteca.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Discoteca.BottomSheet.Modal</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.Discoteca.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/dark_grey</item>
        <item name="postSplashScreenTheme">@style/Theme.Discoteca</item>
    </style>

</resources>